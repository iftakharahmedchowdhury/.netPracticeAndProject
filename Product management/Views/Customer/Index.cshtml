@model Product_management.EF.Customer

@{
    ViewBag.Title = "Index";
}

<h4>Customer login</h4>

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>
    @using (Html.BeginForm("Index", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.LabelFor(model => model.CustomerUserName)
            @Html.TextBoxFor(model => model.CustomerUserName)
        </div>
        <div>
            @Html.LabelFor(model => model.CustomerPassword)
            @Html.PasswordFor(model => model.CustomerPassword)
        </div>
        <div>
            <input type="submit" value="Login" />
        </div>
    }
    @*
        @Html.ActionLink("Sign Up", "SignUp")*@
<div>
    @Html.ActionLink("Sign Up", "SignUp", null, new { @class = "btn btn-success" })
</div>

</body>
</html>